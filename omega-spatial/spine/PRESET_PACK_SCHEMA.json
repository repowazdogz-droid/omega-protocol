{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Omega Spatial Preset Pack Schema",
  "description": "Schema for preset packs that define Inspector copy (titles/meanings) only. No geometry, interactions, or autonomy.",
  "type": "object",
  "required": ["version", "id", "title", "rooms"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (e.g., '1.0')"
    },
    "id": {
      "type": "string",
      "description": "Unique pack identifier"
    },
    "title": {
      "type": "string",
      "description": "Display name for the pack"
    },
    "description": {
      "type": "string",
      "description": "Optional description of the pack"
    },
    "rooms": {
      "type": "object",
      "description": "Room-specific preset data",
      "properties": {
        "constraintRoom": {
          "type": "object",
          "description": "ConstraintRoom preset data (if applicable)"
        },
        "causalRoom": {
          "type": "object",
          "description": "CausalRoom preset data",
          "properties": {
            "nodeTitles": {
              "type": "object",
              "description": "Map of node IDs to display titles",
              "additionalProperties": { "type": "string" }
            },
            "nodeMeanings": {
              "type": "object",
              "description": "Map of node IDs to meaning text",
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "assumptionRoom": {
          "type": "object",
          "description": "AssumptionRoom preset data",
          "properties": {
            "assumptionTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "assumptionMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "conflictTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "conflictMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "tradeoffRoom": {
          "type": "object",
          "description": "TradeoffRoom preset data",
          "properties": {
            "objectiveTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "objectiveMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "constraintTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "constraintMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "frontTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "frontMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "assuranceRoom": {
          "type": "object",
          "description": "AssuranceRoom preset data",
          "properties": {
            "inputTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "inputMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "authorityTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "authorityMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "outcomeTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "outcomeMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "overrideTitles": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "overrideMeanings": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "disallowed": [
    "actions",
    "recommendations",
    "scores",
    "optimization",
    "procedures",
    "certification",
    "geometry",
    "interactions",
    "autonomy"
  ]
}





