{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "omega://spine/contracts/trust_contract.schema.json",
  "title": "TrustContract",
  "type": "object",
  "additionalProperties": false,
  "required": ["humanLed", "nonAutonomous", "visualReasoningOnly", "notSimulation", "noPrediction", "noOptimization", "noRecommendations"],
  "properties": {
    "humanLed": { "type": "boolean", "const": true },
    "nonAutonomous": { "type": "boolean", "const": true },
    "visualReasoningOnly": { "type": "boolean", "const": true },
    "notSimulation": { "type": "boolean", "const": true },
    "noPrediction": { "type": "boolean", "const": true },
    "noOptimization": { "type": "boolean", "const": true },
    "noRecommendations": { "type": "boolean", "const": true },
    "nothingMovesUnlessCamera": { "type": "boolean", "default": true },
    "notes": { "type": "string", "maxLength": 400 }
  }
}


