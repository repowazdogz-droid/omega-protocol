{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "omega://spine/contracts/element.schema.json",
  "title": "Element",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "kind", "layerId", "title", "meaning", "selectable"],
  "properties": {
    "id": { "type": "string", "pattern": "^[A-Z][A-Z0-9_]{1,12}$" },
    "kind": {
      "type": "string",
      "enum": [
        "structure",
        "constraint",
        "assumption",
        "uncertainty",
        "node",
        "link",
        "disallowed_link",
        "objective",
        "feasible_region",
        "tradeoff_front",
        "input",
        "authority",
        "outcome",
        "override",
        "trace",
        "custom"
      ]
    },
    "layerId": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_\\-]{1,32}$" },
    "title": { "type": "string", "minLength": 1, "maxLength": 80 },
    "meaning": { "type": "string", "minLength": 1, "maxLength": 600 },
    "selectable": { "type": "boolean" },
    "tags": { "type": "array", "items": { "type": "string", "maxLength": 40 }, "maxItems": 12 },
    "refs": { "type": "array", "items": { "type": "string", "maxLength": 120 }, "maxItems": 12 },
    "bounds": { "$ref": "omega://spine/contracts/bounds.schema.json" },
    "uncertainty": { "$ref": "omega://spine/contracts/uncertainty.schema.json" }
  }
}


